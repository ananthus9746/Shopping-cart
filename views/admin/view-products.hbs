<section>
    <div class="container">
        <div class="row mt-4">
            <a class="btn btn-success ml-auto mb-4" href="/admin/add-product" >add products</a>
        </div>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                   
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Discription</th>
                    <th >image</th>
                     <th >options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                   
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width:50px ; height:50px;" src="/product-image/{{this._id}}.jpg"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary ">edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger "
                            onclick="return confirm('Are you want to delete {{this.Name}}?')">delete</a>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>