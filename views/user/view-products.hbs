<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="dv col-md-3 p-3">
                <div class="card" style="width: 15rem; ">
                    <img class="card-img-top" src="/product-image/{{this._id}}.jpg" alt="Card image cap"
                        style="height:15rem ;">
                    <div class="card-body">
                        <p style="font-size: 20px;">Rs.{{this.Price}}</p>
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a> --}}
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                       
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</section>

